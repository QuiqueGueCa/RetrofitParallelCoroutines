<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_item_user"
    android:layout_height="@dimen/height_item_user"
    android:layout_marginTop="@dimen/largeMargin"
    android:layout_marginHorizontal="@dimen/largeMargin"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_item_recycler_user">

    <TextView
        android:id="@+id/tvId"
        style="@style/textBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/largeMargin"
        android:text="@string/id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvName" />

    <TextView
        android:id="@+id/tvName"
        style="@style/textBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="@id/tvId"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvIdContent"
        style="@style/textItalic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/commonMargin"
        app:layout_constraintBottom_toBottomOf="@id/tvId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintTop_toTopOf="@id/tvId"
        tools:text="1" />

    <TextView
        android:id="@+id/tvNameContent"
        style="@style/textItalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/commonMargin"
        app:layout_constraintStart_toEndOf="@id/tvName"
        app:layout_constraintTop_toTopOf="@id/tvName"
        tools:text="Pepe" />
</androidx.constraintlayout.widget.ConstraintLayout>