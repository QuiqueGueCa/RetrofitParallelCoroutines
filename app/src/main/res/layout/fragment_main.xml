<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recyclerHeight"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_recycler_user" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginHorizontal="@dimen/largeMargin"
        app:layout_constraintTop_toBottomOf="@id/recyclerView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/tvId"
        style="@style/textBold"
        android:layout_width="@dimen/tvWidth"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:layout_marginTop="@dimen/largeMargin"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/recyclerView" />

    <TextView
        android:id="@+id/tvName"
        style="@style/textBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonMargin"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="@id/tvId"
        app:layout_constraintEnd_toEndOf="@id/tvId"
        app:layout_constraintTop_toBottomOf="@id/tvId" />

    <TextView
        android:id="@+id/tvSurname"
        style="@style/textBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonMargin"
        android:text="@string/surname"
        app:layout_constraintStart_toStartOf="@id/tvId"
        app:layout_constraintEnd_toEndOf="@id/tvId"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvCompany"
        style="@style/textBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonMargin"
        android:text="@string/company"
        app:layout_constraintStart_toStartOf="@id/tvId"
        app:layout_constraintEnd_toEndOf="@id/tvId"
        app:layout_constraintTop_toBottomOf="@id/tvSurnameContain" />

    <TextView
        android:id="@+id/tvSalary"
        style="@style/textBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonMargin"
        android:text="@string/salary"
        app:layout_constraintStart_toStartOf="@id/tvId"
        app:layout_constraintEnd_toEndOf="@id/tvId"
        app:layout_constraintTop_toBottomOf="@id/tvCompany" />

    <TextView
        android:id="@+id/tvIdContain"
        style="@style/textItalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="45"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintTop_toTopOf="@id/tvId" />

    <TextView
        android:id="@+id/tvNameContain"
        style="@style/textItalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pepe"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintTop_toTopOf="@id/tvName" />

    <TextView
        android:id="@+id/tvSurnameContain"
        style="@style/textItalic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="De Quesada LÃ³pez del Quintanar"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSurname" />

    <TextView
        android:id="@+id/tvCompanyContain"
        style="@style/textItalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Currantes SL"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintTop_toTopOf="@id/tvCompany" />

    <TextView
        android:id="@+id/tvSalaryContain"
        style="@style/textItalic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="31563.34"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintTop_toTopOf="@id/tvSalary" />

</androidx.constraintlayout.widget.ConstraintLayout>